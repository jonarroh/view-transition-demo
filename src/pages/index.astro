---
import Layout from '../layouts/Layout.astro';
import { dbImages } from '../../src/db/images';
---

<Layout title="Mi vida">
	<h1
		class="font-extrabold text-transparent text-4xl md:text-6xl lg:text-8xl bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600 text-center py-4 whitespace-normal"
	>
		Galer√≠a de AI imagenes
	</h1>

	<div class="grid grid-cols-2 md:grid-cols-3 gap-4 mt-8">
		{
			dbImages.map(image => (
				<div>
					<a href={`/${image.id}`} class="block">
						<img
							style={`view-transition-name: ${image.id}`}
							id={image.id}
							src={image.image}
							alt={image.descripcion}
							class="w-full"
						/>
					</a>
					<p class="text-sm md:text-2xl text-center font-bold text-amber-400">
						{image.title}
					</p>
					<p class="text-xs md:text-base font-bold text-slate-500 text-center">
						{image.IA}
					</p>
				</div>
			))
		}
	</div>
</Layout>
